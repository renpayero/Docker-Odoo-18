<odoo>
    <record id="view_product_template_track_inventory_mp" model="ir.ui.view">
        <field name="name">product.template.track.inventory.mp</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="priority" eval="30"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='is_storable']" position="after">
                <field name="qty_available_manual"
                       string="Cantidad en inventario"
                       modifiers="{'invisible': [('is_storable', '=', False)]}"
                       class="ms-3 w-25"/>
            </xpath>
        </field>
    </record>

    <record id="view_product_template_hide_template_fields_mp" model="ir.ui.view">
        <field name="name">product.template.hide.template.fields.mp</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="priority" eval="60"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='taxes_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='supplier_taxes_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_policy']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='product_tooltip']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_product_variant_hide_barcode_mp" model="ir.ui.view">
        <field name="name">product.variant.hide.barcode.mp</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='barcode']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>



    <record id="view_product_template_pos_category_mp" model="ir.ui.view">
        <field name="name">product.template.pos.category.mp</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_information']//field[@name='categ_id']" position="before">
                <field name="pos_categ_ids"
                       widget="many2many_tags"
                       string="CategorÃ­a POS"
                       options="{'no_create_edit': False}"/>
            </xpath>
        </field>
    </record>
</odoo>
